<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <TextView
        android:maxLength="15"
        android:id="@+id/main_tv_expression"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="@dimen/main_margin_default"
        android:layout_marginTop="40dp"
        android:textAlignment="textEnd"
        android:textSize="@dimen/main_tv_calculate"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:text="999999999999999" />

    <TextView
        android:id="@+id/main_tv_result"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="@dimen/main_margin_default"
        android:layout_marginBottom="30dp"
        android:textAlignment="textEnd"
        android:textColor="@color/result"
        android:textSize="30sp"
        app:layout_constraintBottom_toTopOf="@id/main_btn_back_on"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        tools:text="999,999,999" />

    <ImageView
        android:id="@+id/main_btn_history"
        android:layout_width="@dimen/main_btn_size"
        android:layout_height="@dimen/main_btn_size"
        android:layout_marginStart="@dimen/main_margin_default"
        android:layout_marginTop="230dp"
        android:src="@drawable/main_btn_history"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/main_btn_unit"
        android:layout_width="@dimen/main_btn_size"
        android:layout_height="@dimen/main_btn_size"
        android:layout_marginStart="@dimen/main_btn_margin_start"
        android:src="@drawable/main_btn_unit"
        app:layout_constraintBottom_toBottomOf="@id/main_btn_history"
        app:layout_constraintStart_toEndOf="@id/main_btn_history"
        app:layout_constraintTop_toTopOf="@id/main_btn_history" />

    <ImageView
        android:id="@+id/main_btn_scientific"
        android:layout_width="@dimen/main_btn_size"
        android:layout_height="@dimen/main_btn_size"
        android:layout_marginStart="@dimen/main_btn_margin_start"
        android:src="@drawable/main_btn_scientific"
        app:layout_constraintBottom_toBottomOf="@id/main_btn_unit"
        app:layout_constraintStart_toEndOf="@id/main_btn_unit"
        app:layout_constraintTop_toTopOf="@id/main_btn_unit" />

    <ImageView
        android:id="@+id/main_btn_back_off"
        android:layout_width="@dimen/main_btn_size"
        android:layout_height="@dimen/main_btn_size"
        android:layout_marginEnd="@dimen/main_margin_default"
        android:src="@drawable/main_btn_back_off"
        android:visibility="visible"
        app:layout_constraintBottom_toBottomOf="@id/main_btn_scientific"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@id/main_btn_scientific"

        />

    <ImageView
        android:onClick="backNum"
        android:layout_marginBottom="10dp"
        android:id="@+id/main_btn_back_on"
        android:layout_width="@dimen/main_btn_size"
        android:layout_height="@dimen/main_btn_size"
        android:layout_marginEnd="@dimen/main_margin_default"
        android:src="@drawable/main_btn_back_on"
        android:visibility="invisible"
        app:layout_constraintBottom_toBottomOf="@id/main_btn_scientific"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@id/main_btn_scientific"

        />

    <View
        android:id="@+id/main_divider"
        android:layout_width="match_parent"
        android:layout_height="2.5dp"
        android:layout_marginHorizontal="20dp"
        android:layout_marginTop="15dp"
        android:background="@color/divider"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/main_btn_history" />

    <TableLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="@dimen/main_margin_nums"
        android:orientation="horizontal"
        android:weightSum="4"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/main_divider">

        <TableRow android:layout_marginVertical="@dimen/main_nums_margin_vertical">

            <TextView
                android:id="@+id/btn_cancel"
                style="@style/NumsBackground"
                android:layout_marginEnd="@dimen/main_nums_margin_end"
                android:layout_weight="1"
                android:background="@drawable/background_nums"
                android:gravity="center"
                android:onClick="clearClicked"
                android:text="C"
                android:textColor="@color/red" />

            <TextView
                android:id="@+id/btn_bracket"
                style="@style/NumsBackground.Green"
                android:layout_marginEnd="@dimen/main_nums_margin_end"
                android:layout_weight="1"
                android:background="@drawable/background_nums"
                android:gravity="center"
                android:onClick="btnClicked"
                android:text="( )" />

            <TextView
                android:id="@+id/btn_percent"
                style="@style/NumsBackground.Green"
                android:layout_marginEnd="@dimen/main_nums_margin_end"
                android:layout_weight="1"
                android:background="@drawable/background_nums"
                android:gravity="center"
                android:onClick="btnClicked"
                android:text="%" />

            <TextView
                android:id="@+id/btn_div"
                style="@style/NumsBackground.Green.Large"
                android:layout_weight="1"
                android:background="@drawable/background_nums"
                android:gravity="center"
                android:onClick="btnClicked"
                android:text="รท" />

        </TableRow>

        <TableRow android:layout_marginVertical="@dimen/main_nums_margin_vertical">

            <TextView
                android:id="@+id/num7"
                style="@style/NumsBackground"
                android:layout_marginEnd="@dimen/main_nums_margin_end"
                android:layout_weight="1"
                android:background="@drawable/background_nums"
                android:gravity="center"
                android:onClick="btnClicked"
                android:text="7" />

            <TextView
                android:id="@+id/num8"
                style="@style/NumsBackground"
                android:layout_marginEnd="@dimen/main_nums_margin_end"
                android:layout_weight="1"
                android:background="@drawable/background_nums"
                android:gravity="center"
                android:onClick="btnClicked"
                android:text="8" />

            <TextView
                android:id="@+id/num9"
                style="@style/NumsBackground"
                android:layout_marginEnd="@dimen/main_nums_margin_end"
                android:layout_weight="1"
                android:background="@drawable/background_nums"
                android:gravity="center"
                android:onClick="btnClicked"
                android:text="9" />

            <TextView
                android:id="@+id/btn_multi"
                style="@style/NumsBackground.Green.Large"
                android:layout_weight="1"
                android:background="@drawable/background_nums"
                android:gravity="center"
                android:onClick="btnClicked"
                android:text="x" />

        </TableRow>

        <TableRow android:layout_marginVertical="@dimen/main_nums_margin_vertical">

            <TextView
                android:id="@+id/num4"
                style="@style/NumsBackground"
                android:layout_marginEnd="@dimen/main_nums_margin_end"
                android:layout_weight="1"
                android:background="@drawable/background_nums"
                android:gravity="center"
                android:onClick="btnClicked"
                android:text="4" />

            <TextView
                android:id="@+id/num5"
                style="@style/NumsBackground"
                android:layout_marginEnd="@dimen/main_nums_margin_end"
                android:layout_weight="1"
                android:background="@drawable/background_nums"
                android:gravity="center"
                android:onClick="btnClicked"
                android:text="5" />

            <TextView
                android:id="@+id/num6"
                style="@style/NumsBackground"
                android:layout_marginEnd="@dimen/main_nums_margin_end"
                android:layout_weight="1"
                android:background="@drawable/background_nums"
                android:gravity="center"
                android:onClick="btnClicked"
                android:text="6" />

            <TextView
                android:id="@+id/btn_minus"
                style="@style/NumsBackground.Green.Large"
                android:layout_weight="1"
                android:background="@drawable/background_nums"
                android:gravity="center"
                android:onClick="btnClicked"
                android:text="-" />

        </TableRow>

        <TableRow android:layout_marginVertical="@dimen/main_nums_margin_vertical">

            <TextView
                android:id="@+id/num1"
                style="@style/NumsBackground"
                android:layout_marginEnd="@dimen/main_nums_margin_end"
                android:layout_weight="1"
                android:background="@drawable/background_nums"
                android:gravity="center"
                android:onClick="btnClicked"
                android:text="1" />

            <TextView
                android:id="@+id/num2"
                style="@style/NumsBackground"
                android:layout_marginEnd="@dimen/main_nums_margin_end"
                android:layout_weight="1"
                android:background="@drawable/background_nums"
                android:gravity="center"
                android:onClick="btnClicked"
                android:text="2" />

            <TextView
                android:id="@+id/num3"
                style="@style/NumsBackground"
                android:layout_marginEnd="@dimen/main_nums_margin_end"
                android:layout_weight="1"
                android:background="@drawable/background_nums"
                android:gravity="center"
                android:onClick="btnClicked"
                android:text="3" />

            <TextView
                android:id="@+id/btn_plus"
                style="@style/NumsBackground.Green.Large"
                android:layout_weight="1"
                android:background="@drawable/background_nums"
                android:gravity="center"
                android:onClick="btnClicked"
                android:text="+" />

        </TableRow>

        <TableRow android:layout_marginVertical="@dimen/main_nums_margin_vertical">

            <TextView
                style="@style/NumsBackground.Small"
                android:layout_marginEnd="@dimen/main_nums_margin_end"
                android:layout_weight="1"
                android:background="@drawable/background_nums"
                android:gravity="center"
                android:onClick="btnClicked"
                android:text="+/-" />

            <TextView
                android:id="@+id/num0"
                style="@style/NumsBackground"
                android:layout_marginEnd="@dimen/main_nums_margin_end"
                android:layout_weight="1"
                android:background="@drawable/background_nums"
                android:gravity="center"
                android:onClick="btnClicked"
                android:text="0" />

            <TextView
                android:id="@+id/btn_dot"
                style="@style/NumsBackground"
                android:layout_marginEnd="@dimen/main_nums_margin_end"
                android:layout_weight="1"
                android:background="@drawable/background_nums"
                android:gravity="center"
                android:onClick="btnClicked"
                android:text="." />

            <TextView
                android:id="@+id/btn_result"
                android:layout_height="@dimen/main_nums_height"
                android:layout_weight="1"
                android:background="@drawable/background_nums"
                android:backgroundTint="@color/lightGreen"
                android:gravity="center"
                android:onClick="btnClicked"
                android:text="="
                android:textColor="@color/white"
                android:textSize="30sp" />

        </TableRow>

    </TableLayout>


</androidx.constraintlayout.widget.ConstraintLayout>

